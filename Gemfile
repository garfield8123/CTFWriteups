# Gemfile for GitHub Pages + jekyll-gitbook

source "https://rubygems.org"

# GitHub Pages gem (locks Jekyll + dependencies to GitHub Pages versions)
gem "github-pages", group: :jekyll_plugins

# Remote themes support
gem "jekyll-remote-theme", group: :jekyll_plugins

# (Optional but good to have for syntax highlighting)
gem "rouge"

# Your theme (pulled as remote_theme in _config.yml)
# No need to gem install, GitHub handles it. Keeping here lets local builds match.
#gem "jekyll-gitbook", git: "https://github.com/sighingnow/jekyll-gitbook"
